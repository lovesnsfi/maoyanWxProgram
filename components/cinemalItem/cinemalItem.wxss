.cinemaItem
{
    min-height: 160rpx;
    width:100%;
    display: flex;
    flex-direction: column;
    border-bottom: 1px solid gray;
    justify-content: space-between;
    padding: 15rpx;
    box-sizing: border-box;
}
.cinemaItem .c_nm
{
    font-size: 12px;
}
.cinemaItem .c_addr
{
    color: gray;
    font-size: 12px;
}
.cinemaItem .c_mark
{
    color:lightgray;
    font-size: 12px;
    display: flex;
    flex-direction: row;
}
.c_mark .d3
{
    background-color: white;
    margin: 0 5px;
    color: #8bb7ce;
    border-radius: 3px;
    width: 25px;
    text-align: center;
    cursor: pointer;
    border: 1px solid lightblue;
}
.c_mark .imax
{
    border-radius: 3px;
    cursor: pointer;
    border:1px solid lightblue;
}