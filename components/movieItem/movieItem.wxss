.movieItem
{
  display: flex;
  flex-direction: row;
  margin: 2px 0px;
}
.left{
  width:200rpx;
  box-sizing: border-box;
  padding: 2px;
}
.left image{
  width:100%;
  display: block;
}
.center{
  flex:1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  box-sizing: border-box;
  padding: 0px 3px;
}
.right{
  width:140rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.score{
  font-weight: bold;
  color: orange;
}
.btnBuy,.btnPreSale{
  width:100rpx;
  height:60rpx;
  background-color: tomato;
  color: white;
  border-radius: 10rpx;
  border:none;
  text-align: center;
  line-height: 60rpx;
}
.m_title
{
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.imax{
  width:70rpx;
  height:30rpx;
  font-size: 20rpx;
  color: white;
  margin-left: 20rpx;
  font-weight: normal;
  background-color: lightblue;
  text-align: center;
  line-height: 30rpx;
  border-radius: 3px;
}
.btnPreSale{
  background-color: lightskyblue;
}